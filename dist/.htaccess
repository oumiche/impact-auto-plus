# Configuration des types MIME pour les fichiers Vue.js et modules ES6
<IfModule mod_mime.c>
    # Fichiers Vue.js
    AddType application/javascript .vue
    
    # Modules ES6
    AddType application/javascript .mjs
    
    # Assurer que les fichiers JS sont servis avec le bon type MIME
    AddType application/javascript .js
    
    # Headers pour les modules ES6
    <FilesMatch "\.(vue|mjs)$">
        Header set Content-Type "application/javascript; charset=utf-8"
    </FilesMatch>
</IfModule>

# Configuration CORS pour les modules ES6
<IfModule mod_headers.c>
    <FilesMatch "\.(vue|mjs|js)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    </FilesMatch>
</IfModule>

# Cache pour les fichiers statiques
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE text/css
</IfModule>